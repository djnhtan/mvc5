@Scripts.Render("~/bundles/jquery")
<script>
    $(document).ready(function () {
        var menuActive = '@ViewBag.MenuActive';
        if (menuActive != null) {
            $('.sidebar').find('a').each(function () {
                if ($(this).text() == menuActive) {
                    $(this).closest('li').addClass('active');
                }
            });
        }
    });
</script>
