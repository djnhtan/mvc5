@model BasicWebsite.Areas.Admin.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    ViewBag.MenuActive = "User";
}

<h3>@ViewBag.Title.</h3>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.UserName, new { @class = "col-md-4" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-4" })
            <div class="col-md-6">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4" })
            <div class="col-md-6">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Sex, new { @class = "col-md-4" })
            <div class="col-md-8">
                <div class="radio">
                    <label>
                        @Html.RadioButtonFor(m => m.Sex, "Male") Male
                    </label>
                    <label>
                        @Html.RadioButtonFor(m => m.Sex, "Female") Female
                    </label>
                    <label>
                        @Html.RadioButtonFor(m => m.Sex, "Other") Other
                    </label>
                </div>
                @Html.ValidationMessageFor(m => m.Sex)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-4" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" class="btn btn-default btn-sm" value="Register" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
