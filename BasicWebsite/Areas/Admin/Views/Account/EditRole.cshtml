@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Edit Role";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.MenuActive = "Role";
}

<h3>Edit Role</h3>
@Html.ActionLink("All Roles", "AllRoles", new { area="Admin"}) | @Html.ActionLink("Create New Role", "CreateRole", new {area="Admin" })
@using (Html.BeginForm("EditRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    <div class="row">
        <div class="form-group col-md-6">
            <label class="col-md-4">Role Name</label>
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" class="btn btn-default btn-sm" value="Save" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
