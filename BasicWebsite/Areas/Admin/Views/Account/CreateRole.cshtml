@model BasicWebsite.Areas.Admin.Models.RoleViewModel

@{
    ViewBag.Title = "Create Role";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.MenuActive = "Role";
}

<h3>Create Role</h3>
<hr />
@using (Html.BeginForm("CreateRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Role, new { @class = "col-md-4" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Role, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Role)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" class="btn btn-default btn-sm" value="Add role" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
