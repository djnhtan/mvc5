@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Delete Role";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.MenuActive = "Role";
}

<h3>Delete Role</h3>
<hr />
@using (Html.BeginForm("RemoveRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Name)
    <div class="row">
        <div class="form-group col-md-6">
            <label class="col-md-4">Role Name</label>
            <div class="col-md-8">
                @Html.DisplayFor(m => m.Name)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" class="btn btn-default btn-sm" value="Remove" />
            </div>
        </div>
    </div>
}

